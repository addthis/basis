    <parent>
        <artifactId>jar-pom</artifactId>
        <groupId>com.addthis.common.build.maven.pom</groupId>
        <version>3.4.0</version>
    </parent>

    <modelVersion>4.0.0</modelVersion>
    <groupId>com.addthis.basis</groupId>
    <artifactId>basis-parent</artifactId>
    <packaging>pom</packaging>
    <version>4.0.4-SNAPSHOT</version>
    <modules>
        <module>basis-net</module>
        <module>basis-time</module>
        <module>basis-core</module>
        <module>basis-netty</module>
        <module>basis-kafka8</module>
        <module>basis-kafka10</module>
    </modules>
    <url>https://github.com/addthis/basis</url>
    <description>AddThis core java classes</description>
    <licenses>
        <license>
            <name>Apache License, Version 2.0</name>
            <url>http://www.apache.org/licenses/LICENSE-2.0.txt</url>
        </license>
    </licenses>

    <properties>
        <project.build.targetJdk>1.8</project.build.targetJdk>
        <basis.dep.org.apache.httpcomponents.httpcore.version>4.4.3
        </basis.dep.org.apache.httpcomponents.httpcore.version>
        <basis.dep.org.apache.httpcomponents.httpclient.version>4.4.1
        </basis.dep.org.apache.httpcomponents.httpclient.version>
        <basis.dep.netty4.version>4.0.28.Final</basis.dep.netty4.version>
    </properties>

    <reporting>
        <plugins>
            <plugin>
                <groupId>org.apache.rat</groupId>
                <artifactId>apache-rat-plugin</artifactId>
            </plugin>
        </plugins>
    </reporting>

    <build>
        <pluginManagement>
            <plugins>
                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-site-plugin</artifactId>
                    <version>3.4</version>
                </plugin>
            </plugins>
        </pluginManagement>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-surefire-plugin</artifactId>
                <configuration>
                    <argLine>-Dfile.encoding=UTF-8</argLine>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <scm>
        <connection>scm:git:git@github.com:addthis/basis.git</connection>
        <developerConnection>scm:git:git@github.com:addthis/basis.git</developerConnection>
        <url>https://github.com/addthis/basis</url>
        <tag>HEAD</tag>
    </scm>
</project>
